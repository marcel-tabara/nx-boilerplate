{
  "name": "nxb-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/nxb-components/src",
  "projectType": "library",
  "tags": ["nxb-components"],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/nxb-components",
        "tsConfig": "libs/nxb-components/tsconfig.lib.json",
        "project": "libs/nxb-components/package.json",
        "entryFile": "libs/nxb-components/src/index.ts",
        "external": ["react", "react-dom", "react/jsx-runtime"],
        "rollupConfig": "@nx/react/plugins/bundle-rollup",
        "compiler": "babel",
        "assets": [
          {
            "glob": "libs/nxb-components/README.md",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/nxb-components/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/nxb-components",
        "configDir": "libs/nxb-components/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "nxb-components:build-storybook",
        "staticFilePath": "dist/storybook/nxb-components"
      },
      "configurations": {
        "ci": {
          "buildTarget": "nxb-components:build-storybook:ci"
        }
      }
    }
  }
}
